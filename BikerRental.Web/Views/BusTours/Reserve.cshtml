@using BikeRental.Models
@using System.Collections
@{
    ViewBag.Title = "Bus Tours";
}
@section Top {
    @Html.Partial("_TopReserve", (BusTour)ViewBag.tour, new ViewDataDictionary { { "Tours", ViewBag.Tours } })
}
@section Middle{
    @Html.Partial("_MiddleReserve")
}

@section Right{
    @Html.Partial("_Right")
}

@section Left{
    @Html.Partial("_Left")
}

@section scripts{
    <script type="text/javascript">
        $(".choose").on("mouseover", function () {
            $(".popup").show();
        });


        $(".choose").on("mouseout", function () {
            $(".popup").hide();
        });

        $(".popup").on("mouseover", function () {
            $(this).show();
        });
        $(".popup").on("mouseout", function () {
            $(this).hide();
        });

        function func1(a) {
            window.location.href = "http://itechnoweb.com/bikerental/biketours/reserveTour" + "/" + a;
        }
    </script>
}

@section styles{
    <style type="text/css">
        .container {
            position: relative;
        }

        .choose {
            height: 50px;
            border: 0px solid #00CC00;
            cursor: pointer;
        }

            .choose:hover {
            }

        .popup {
            padding: 2px;
            background-color: #f5f5f5;
            position: absolute;
            top: 50px;
            left: 5px;
            width: 330px;
            display: none;
            border: 1px solid #999;
        }

        .hoverit a {
            color: #000;
            text-decoration: none;
        }

        .hoverit a:hover {
            color: #0066CC;
        }
    </style>
}