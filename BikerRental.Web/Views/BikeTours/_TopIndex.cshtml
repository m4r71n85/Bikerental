@using BikeRental.Models
@model List<BikeTour>

<table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td valign="top" class="box">
                <table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td valign="top" class="blue_top">
                                <table width="380" border="0" cellspacing="0" cellpadding="0">
                                    <tbody>
                                        <tr>
                                            <td width="33" align="center" style="padding-top:12px;">
                                                <table width="18" border="0" align="center" cellspacing="0" cellpadding="0">
                                                    <tbody>
                                                        <tr>
                                                            <td align="center" style="padding-bottom:4px;">
                                                                <img width="18" height="9" alt="up" src="http://itechnoweb.com/bikerental/assets/images/front/arrow_up.png">
                                                            </td>

                                                        </tr>
                                                        <tr>
                                                            <td align="center"><img width="18" height="9" alt="down" src="http://itechnoweb.com/bikerental/assets/images/front/arrow_down.png"></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                            <td width="295" valign="top" class="banner_whtext">Select a tour</td>

                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <!-- <td valign="top" width="125px" class="yellow_top">
                             <table width="120" border="0" align="center" cellpadding="0" cellspacing="0">
                               <tr>
                                 <td valign="top" class="banner_whtext_1">online<br /> special</td>
                                   <td valign="top" class="banner_bluetext">20%<br /><span class="banner_bluetext_1">OFF</span></td>
                               </tr>
                             </table></td>-->
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td valign="top" class="blue_box">
                <table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td valign="top" align="center"><img width="510" height="45" alt="tour_header" src="http://itechnoweb.com/bikerental/assets/images/front/bike_tour_header.png"></td>
                        </tr>
                        <tr>
                            <td valign="top" align="center">
                                <table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
                                    <tbody>
                                        <tr>
                                            @foreach (BikeTour tour in Model) { 
                                                <td valign="top" align="left">
                                                <table width="99" border="0" align="center" cellspacing="0" cellpadding="0">
                                                    <tbody>
                                                        <tr>
                                                            <td valign="top" align="left" class="deepblue_box">
                                                                <table width="99" border="0" align="center" cellspacing="0" cellpadding="0">
                                                                    <tbody>
                                                                        <tr>
                                                                            <td valign="top" class="whtext_tour">@tour.Name</td>
                                                                            <td valign="top" class="yellowtext_tour">
                                                                                online<br>price<br>
                                                                                <span class="yellowtext_tour_1">$@Convert.ToInt32(tour.OnlinePrice)</span>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td width="99px" valign="top" height="156px" align="center" style="background-image: url('@Url.Content(string.Format("~/Content/Images/Raw/{0}{1}", tour.Image, ImageSizes.FR_LIST_TOURS))'); background-position: center top; background-repeat: no-repeat">
                                                                <a href="@Url.Action("Reserve", "BikeTours", new { id=tour.Id }, null)">
                                                                    <img width="99px" height="156px" src="http://itechnoweb.com/bikerental/assets/images/front/space.png">
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td valign="top" align="center" class="deepblue_box">
                                                                <table width="99" border="0" align="center" cellspacing="0" cellpadding="0">
                                                                    <tbody>
                                                                        <tr>
                                                                            <td width="50" valign="top" class="whtext_tour_1">
                                                                                regular price<br>
                                                                                <span style=" text-decoration:none; background-image:url(http://itechnoweb.com/bikerental/assets/images/front/linethru.png); background-repeat:no-repeat; background-position:center; vertical-align:middle; padding:0px" class="whtext_tour_2">$@Convert.ToInt32(tour.OnstatePrice)</span>
                                                                            </td>
                                                                            <td width="49" valign="top" align="right">
                                                                                <a href="biketours/showFormAddToCart/21">
                                                                                    <img width="49" height="33" border="0" alt="add_to_cart" src="http://itechnoweb.com/bikerental/assets/images/front/add_to_cart.png">
                                                                                </a>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </td>
                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>


    </tbody>
</table>
