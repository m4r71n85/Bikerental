@using BikeRental.Models
@model Bicycle

<table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td valign="top" class="box">
                <table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td valign="top" class="blue_top">
                                <div class="container">
                                    <div style="display: none;" class="popup">
                                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                            <tbody>
                                                @foreach (Bicycle bike in ViewBag.bikes) {
                                                <tr>
                                                    <td width="50px" valign="top" style="padding:8px">
                                                        <a href="@Url.Action("Reserve", "Bikerental", new { id = bike.Id }, null)">
                                                            <img src="@Url.Content(string.Format("~/Content/Images/Raw/{0}{1}", bike.Image, ImageSizes.FE_SMALL))" style="border:1px solid #999999; background-color:#FFFFFF">
                                                        </a>
                                                    <td valign="top" align="left" style="padding:10px; font-weight:bold; font-size:13px; text-align:left" class="hoverit">
                                                        <div>
                                                            <a href="@Url.Action("Reserve", "Bikerental", new { id = bike.Id }, null)">
                                                                @bike.Name
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2" style="border-bottom:1px solid #333333; height:2px"></td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <table width="380" border="0" cellspacing="0" cellpadding="0" class="choose">
                                        <tbody>
                                            <tr>
                                                <td width="33" align="center" style="padding-top:0px;">
                                                    <table width="18" border="0" align="center" cellspacing="0" cellpadding="0">
                                                        <tbody>
                                                            <tr>
                                                                <td align="center" style="padding-bottom:4px;"><img width="18" height="9" src="http://itechnoweb.com/bikerental/assets/images/front/arrow_up.png" alt="up"></td>
                                                            </tr>
                                                            <tr>
                                                                <td align="center"><img width="18" height="9" src="http://itechnoweb.com/bikerental/assets/images/front/arrow_down.png" alt="down"></td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                                <td width="295" valign="top" class="banner_whtext">@Model.Name</td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </td>
                            <td width="125px" valign="top" class="yellow_top">
                                <table width="120" border="0" align="center" cellspacing="0" cellpadding="0">
                                    <tbody>
                                        <tr>
                                            <td valign="top" class="banner_whtext_1">
                                                online<br>
                                                special
                                            </td>
                                            <td valign="top" class="banner_bluetext">10%<br><span class="banner_bluetext_1">OFF</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td valign="top">
                <table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td width="386" valign="top" class="blue_box">
                                <table width="386" border="0" align="center" cellspacing="0" cellpadding="0">
                                    <tbody>
                                        <tr>
                                            <td valign="top">
                                                <img src="@Url.Content(string.Format("~/Content/Images/Raw/{0}{1}", Model.Image, ImageSizes.FE_LARGE_RESERVE))" alt="bike">
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>

                            <td width="70" valign="top" align="center" class="wh_box">
                                <table width="60" border="0" cellspacing="0" cellpadding="0">
                                    <tbody>
                                        @foreach (BicyclePrices price in Model.Prices){
                                        <tr>
                                            <td valign="top" class="bluetext_time">@price.Duration hour</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                            <td width="54" valign="top" align="center" class="yellow_box">
                                <table width="45" border="0" cellspacing="0" cellpadding="0">
                                    <tbody>
                                        @foreach (BicyclePrices price in Model.Prices)
                                        {
                                        <tr>
                                            <td valign="top" class="bluetext_time">$@price.OnlinePrice</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td valign="top" class="deepblue_box">
                <table width="510" border="0" align="center" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td width="339" valign="top" class="whitetext_1">
                                @Html.Raw(@Model.Description)
                            </td>
                            <td width="171" valign="top" align="center" style="padding:20px 0px 0px 0px;">
                                <a href="@Url.Action("AddToCart", "BikeRental", new { id = Model.Id }, null)">
                                    <img width="144" height="33" border="0" src="http://itechnoweb.com/bikerental/assets/images/front/reserve_bttn.png" title="add_to_cart">
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>