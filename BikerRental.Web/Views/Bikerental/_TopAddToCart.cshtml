@using BikeRental.Models
@model Bicycle

<form enctype="multipart/form-data" name="tourReservations" accept-charset="utf-8" method="post" action="@Url.Action("AddToCart", "BikeRental")">
    <table width="100%" border="0" cellspacing="5" cellpadding="3" style="padding:10px; border:1px solid #666666; border-bottom:3px solid #666; -webkit-border-radius: 3px;-moz-border-radius: 3px; border-radius: 3px;">
        <tbody>
            <tr>
                <td align="center" style="background-color:#f5f5f5" colspan="2"><div style="font-size:20px; color:#054388; font-weight:bold; padding-top:5px">Reserve your Bike</div><div style="padding-bottom:5px; padding-top:5px; font-size:12px">Fill in the form below</div></td>
            </tr>
            <tr>
                <td>
                    Interested In :
                </td>
                <td>
                    <table width="100%" cellspacing="0" cellpadding="0">
                        <tbody>
                            <tr>
                                <td width="26%" align="left">
                                    <img style="float:left; padding-right:5px" title="@Model.Name" src="@Url.Content(string.Format("~/Content/Images/Raw/{0}{1}", Model.Image, ImageSizes.FE_SMALL))">
                                    @Model.Name
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>

            <tr>
                <td>
                    Date *
                </td>
                <td>
                    <input type="text" onblur="if(this.value == '') { this.value = 'Date *'; } " onfocus="if(this.value  == 'Date *'){ this.value = ''; } " value="Date *" style="-webkit-border-radius: 3px;
				-moz-border-radius: 3px;
				border-radius: 3px;
				background-color:#FFFFFF;
				border:1px solid #054388;
				width:176px;
			    font-family:Arial;
				font-size:12px;
				color:#054388;
				padding:4px;
				padding-left:14px;
				z-index: 100; " class="tcal tcalInput" id="datepicker" name="Date">
                </td>
            </tr>

            <tr id="durationrow">
                <td>Duration </td>
                <td>
                    <select style="width: 200px; border:1px solid #054388" class="round" id="duration" name="Duration">
                        <option value="Duration *">Duration *</option>
                        @foreach (BicyclePrices price in Model.Prices)
                        {
                            <option value="@price.Duration">@(price.Duration) hours</option>
                        }
                    </select>
                </td>
            </tr>

            <tr id="rowMale">
                <td>No. Of Bikes *</td>
                <td>
                    <select style="width: 200px; border:1px solid #054388" class="round" id="male" name="Quantity">
                        <option value="No of Bikes *">No of Bikes *</option>
                        <option value="0">None</option>
                        @for (int i = 1; i < 21; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>Booking Name</td>

                <td>
                    <input type="text" onblur="if(this.value == '') { this.value = 'Name *'; } " onfocus="if(this.value  == 'Name *'){ this.value = ''; } " value="Name *" style="border:1px solid #054388" class="round" name="Name">
                </td>
            </tr>
            <tr>
                <td>Booking Email </td>

                <td>
                    <input type="text" onblur="if(this.value == '') { this.value = 'Email Address *'; } " onfocus="if(this.value  == 'Email Address *'){ this.value = ''; } " value="Email Address *" style="border:1px solid #054388" class="round" name="Email">
                </td>
            </tr>
            <tr>
                <td>Booking&nbsp;Phone&nbsp;</td>

                <td>
                    <input type="text" onblur="if(this.value == '') { this.value = 'Phone Number *'; } " onfocus="if(this.value  == 'Phone Number *'){ this.value = ''; } " value="Phone Number *" style="border:1px solid #054388" class="round" name="Phone">
                </td>
            </tr>
            <tr>
                <td align="center" style="padding-bottom:10px">
                </td>
                <td align="left" style="padding-bottom:10px">
                    <input type="hidden" name="BicycleId" value="@Model.Id">
                    @Html.AntiForgeryToken()
                    <input type="button" onclick="tt2();" style="background-color:#1190de; -webkit-border-radius: 3px;-moz-border-radius: 3px; border-radius: 3px; cursor:pointer; border:1px solid #054388; font-size:16px; font-weight:bold; color:#fff; text-shadow:#333333 1px 1px 3px; padding:6px 12px 6px 12px" value="Add to Cart" name="tourReservation">
                </td>
            </tr>
        </tbody>
    </table>

</form>